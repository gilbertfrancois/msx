10 COLOR 15,4,4
20 CLS
30 SCREEN 2
40 XC=128: YC=96     ' Center
50 PI=4*ATN(1)       ' Pi
60 C=15: CB=4        ' Color
100 CIRCLE(XC,YC),8,C
110 CIRCLE(XC,YC),16,C
120 PAINT(XC+12,YC),C
121 R1=24: R2=80
122 CIRCLE(XC,YC),R1,C
123 CIRCLE(XC,YC),R2,C
130 FOR AN=0 TO 1.99*PI STEP PI/9
140 A1=AN: A2=AN+PI/18
150 R1=24: R2=80
160 GOSUB 1000
170 NEXT AN
180 CIRCLE(XC,YC),R1,CB
190 CIRCLE(XC,YC),R2,CB
998 IF INKEY$ <> " " GOTO 998
999 END
1000 '
1010 ' Draw segments
1020 ' in: r1, r2       ' radii
1030 '     a1, a2       ' angles
1040 '     xc, yc       ' center
1060 '
1070 'CIRCLE(XC,YC),R1,C,A1,A2
1080 'CIRCLE(XC,YC),R2,C,A1,A2
1090 X0=XC+R1*COS(A1)
1100 Y0=YC-R1*SIN(A1)
1110 X1=XC+R2*COS(A1)
1120 Y1=YC-R2*SIN(A1)
1130 LINE(X0,Y0)-(X1,Y1)
1140 X0=XC+R1*COS(A2)
1150 Y0=YC-R1*SIN(A2)
1160 X1=XC+R2*COS(A2)
1170 Y1=YC-R2*SIN(A2)
1180 LINE(X0,Y0)-(X1,Y1)
1190 RH=R1+(R2-R1)/2
1200 AH=A1+(A2-A1)/2
1210 X0=XC+RH*COS(AH)
1220 Y0=YC-RH*SIN(AH)
1230 PAINT(X0,Y0),C
1240 RETURN
