10 ' Pendulum (precise, slow)
20 ' Gilbert Francois Duivesteijn
30 '
40 COLOR 1,15,15
50 SCREEN 2: CLS
60 PI=4*ATN(1)
70 S=.9
80 A1=0
90 A2=.5*PI
100 A3=PI
110 A4=1.5*PI
120 R1=50:R2=10:R3=30:R4=10
130 C1=14:C2=0:C3=1
140 T1=TIME
150 FOR I=0 TO 360
160 GOSUB 280
170 A1=A1+1/180*PI
180 A2=A2-2/180*PI
190 A3=A3+3/180*PI
200 A4=A4-4/180*PI
210 NEXT I
220 T2=TIME
230 IF INKEY$ <> " " THEN GOTO 230
240 SCREEN 0: CLS
250 PRINT "Elapsed time:"
260 PRINT STR$((T2-T1)/50) +" seconds."
270 END
280 ' Draw pendulum
290 '
300 ' in: R1,R2,R3,R4 (radiuses)
310 '     A1,A2,A3    (angles)
320 '     C1,C2,C3    (colors)
330 '     S           (aspect ratio)
340 ' out: none
350 '
360 CA=COS(A1): SA=SIN(A1)
370 X0=128+R1*CA*SA
380 Y0=96-R1*CA*SA*S
390 X1=X0+R1*CA
400 Y1=Y0+R1*SA*S
410 X2=X1+R2*COS(A2)
420 Y2=Y1+R2*SIN(A2)*S
430 X3=X2+R3*COS(A3)
440 Y3=Y2+R3*SIN(A3)*S
450 X4=X3+R4*COS(A4)
460 Y4=Y3+R4*SIN(A4)*S
470 IF C1>0 THEN LINE(X1,Y1)-(X2,Y2),C1
480 IF C2>0 THEN LINE(X2,Y2)-(X3,Y3),C2
490 IF C3>0 THEN LINE(X3,Y3)-(X4,Y4),C3
500 RETURN
