40 COLOR 15,4,4: CLS
50 SCREEN 2
60 PI=4*ATN(1)
70 A1=0          ' alpha1
80 P2=PI/2       ' half PI
90 P4=PI/4       ' quarter PI
100 B=PI/9       ' inc angle beta
110 CB=COS(P4-B) ' cos(a-b)
120 XC=128
130 YC=96
140 L0=92
150 LW=.5*SQR(L0)/CB
160 FOR I=0 TO 17
170 FOR A0=P4 TO 2*PI STEP P2
180 GOSUB 260
190 NEXT A0
200 A1=A1+PI/9
210 L1=L0*.5*SQR(2)/CB
220 L0=L1
230 NEXT I
240 IF INKEY$<>" " GOTO 240
250 END
260 ' line
270 '
280 A2=A1+PI/2
290 X0=XC+L0*COS(A0+A1)
300 Y0=YC+L0*SIN(A0+A1)
310 X1=XC+L0*COS(A0+A2)
320 Y1=YC+L0*SIN(A0+A2)
330 LINE(X0,Y0)-(X1,Y1)
